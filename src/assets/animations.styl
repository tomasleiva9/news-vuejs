@import 'variables.styl';
$calc = 'calc(-%s + %s)' % (100% $sidebars)

/*
 * TRANSITIONS
 */

.slide-left-leave-active
.slide-left-enter-active
.slide-right-leave-active
.slide-right-enter-active
  transition transform .5s $timing, opacity .5s $timing
  transition-delay .2s

.slide-left-enter
.slide-right-leave-to
  transform translate3d(100%, 0, 0)

.slide-left-leave-to
.slide-right-enter
  transform translate3d(-100%, 0, 0)

.slide-right-leave-to
.slide-left-leave-to
.slide-left-enter
.slide-right-enter
  opacity 0

.slide-right-enter-to
.slide-left-enter-to
  opacity 1




/*
 * PLACEHOLDER
 */

.placeholder
  pointer-events none
  position absolute
  z-index 100
  top 0
  left - $sidebars
  width $sidebars
  height 100vh

.placeholder.placeholder--trans-in
  transition all .5s $timing .6s
  left 0

.placeholder.placeholder--trans-out
  transition all .5s
  opacity: 0;
  left 0
