@import '../../../assets/variables.styl'

.main-content
  position fixed
  top 0
  left 0
  width 100vw
  height 100vh
  z-index 1
  background-color #f5f5f5

.content
  @extends .main-content
  left $sidebars
  width 'calc(%s - %s)' % (100% $sidebars)
  opacity 1
  transition opacity .5s $timing .4s

  div
    transform translate3d(0, 0, 0)
    opacity 1
    transition transform .6s $timing .2s

    &:first-child
      transition-delay: .1s

.sidebar
  @extends .content
  left 0
  width $sidebars
  background white;


.slide-left-enter-active .sidebar
.slide-left-enter-active .content
  opacity 0

  div
    opacity 0
    transform translate3d(100px, 0, 0)

