@import '../../../assets/variables.styl'

.main-content
  position fixed
  top 0
  left 0
  width 100vw
  height 100vh
  z-index 1
  background-color #f5f5f5

.content
  @extends .main-content
  left $sidebars
  width 'calc(%s - %s)' % (100% $sidebars)
  opacity 1
  transition all .5s $timing .4s
  overflow auto

.sidebar
  @extends .content
  left 0
  width $sidebars
  background white;


/*Transition*/
.slide-left-enter-active
  .sidebar
  .content
    opacity 0

    div
      opacity 0
      transform translate3d(100px, 0, 0)

.slide-left-leave-active
  .sidebar
  .content
    div
      opacity 0
      transition opacity .5s $timing

.slide-right-leave-active
  .sidebar
    opacity 0
    transform translate3d(-50px, 0, 0)
    transition-delay .2s
  .content
    div
      opacity 0
      transform translate3d(50px, 0, 0)
      transition all .5s $timing .2s