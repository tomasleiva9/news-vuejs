@import '../../../assets/variables.styl'

.post
  position relative
  overflow hidden
  width 100%

  .post-head
    text-align center
    font-size .8em
    color lighten($main-font-color, 60%)

    .divisor
      background-color lighten($main-font-color, 90%)
      height 1px
      margin 5px 50px

    span
      font-size .9em

  .post-title-section
    flex 1
    text-align center
    margin 20px

    .post-title
      color lighten($main-font-color, 30%)


  .post-content-section
    flex 1
    text-align center
    width 100%

    .post-channels
      color inherit
      font-weight normal
      font-size 70%
      background-color #f8f8f8
      border 2px solid transparent
      border-radius 0
      margin 2px
      padding 0 4px
      cursor pointer
      vertical-align middle

        .post-channels-name
          color lighten($main-font-color, 55%)

        .post-channels-aval
          padding 0 3px
          margin-left 6px
          margin-right: -6px;
          background-color limegreen

        &:hover
          overflow hidden

  .post-actions
    position absolute
    left 0
    bottom -10px
    width 100%

    a
      opacity 0
      transform translate3d(0, 40px, 0)

  & *
    transition transform .3s $timing, opacity .3s $timing
    z-index: 10

  &::before
    position absolute
    content ''
    top 10px
    right 10px
    bottom 10px
    left 10px
    background-color white

  &.active::before
    border 2px solid #ccc

  &.active:hover
    outline 1px solid #ccc
    .post-head
    .post-title
    .post-channels .post-channels-name
      color initial

  &:hover
    background-color white
    box-shadow: 0 1px 5px rgba(0,0,0,.1)

    .post-head strong
    .post-title
    .post-channels .post-channels-name
      color initial

    .post-actions
      for i in 1 2 3 4 5
        a:nth-child({i})
          display inherit
          opacity 1
          transform translate3d(0, 0, 0)
          transition-delay '%sms' % (50 * i)

    &.active::before
      border-width 0


/*
 * Media Querys
 */

@media screen and (min-width: 576px) {
  .post {
    width: 50%;
  }
}

@media screen and (min-width: 767px) {
  .post {
    width: 100%;
  }
}

@media screen and (min-width: 881px) {
  .post {
    width: 50%;
  }
}

@media screen and (min-width: 1200px) {
  .post {
    width: 33.3%
  }
}

@media screen and (min-width: 1500px) {
  .post {
    width: 25%;
  }
}

@media screen and (min-width: 1800px) {
  .post {
    width: 20%;
  }
}

@media screen and (min-width: 1921px) {
  .post {
    width: 16.66%;
  }
}

@media screen and (min-width: 3000px) {
  .post {
    width: 10%;
  }
}