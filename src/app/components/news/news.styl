@import '../../../assets/variables.styl'

.post
  position relative
  overflow hidden
  width 100%
  min-height 300px
  padding-top 100px
  padding-bottom 50px

  .post-head
    position absolute
    top 20px
    left 0
    text-align center
    font-size .8em
    color lighten($main-font-color, 60%)

    .divisor
      background-color lighten($main-font-color, 90%)
      height 1px

    span
      font-size .9em
      font-weight 300

    strong
      font-weight 600

  .post-title-section
    text-align center
    min-height 100px

    .post-title
      color lighten($main-font-color, 30%)


  .post-content-section
    flex 1
    text-align center
    width 100%
    line-height 0

    .post-channels
      color lighten($main-font-color, 55%)
      font-weight 400
      vertical-align middle
      font-size 70%
      background-color #f8f8f8
      border 2px solid transparent
      border-radius 0
      margin 2px
      padding 0 4px
      cursor pointer

      .post-channels-aval
        padding 0 3px
        margin-left 6px
        margin-right: -6px;
        background-color limegreen

      &:hover
        overflow hidden


  .post-actions
    position absolute
    left 0
    bottom 0
    width 100%

    a
      opacity 0
      transform translate3d(0, 40px, 0)

  & *
    transition transform .3s $timing, opacity .3s $timing
    z-index: 10

  &::before
    position absolute
    content ''
    top 10px
    right 10px
    bottom 10px
    left 10px
    background-color white
    box-shadow: 0 1px 5px rgba(0,0,0,.1)

  &.active::before
    border 2px solid #ccc

  &.active:hover
    outline 1px solid #ccc
    .post-head
    .post-title
    .post-channels .post-channels-name
      color initial

  &:hover
    background-color white
    box-shadow: 0 1px 5px rgba(0,0,0,.1)

    .post-head strong
    .post-title
    .post-channels .post-channels-name
      color initial

    .post-actions
      for i in 1 2 3 4 5
        a:nth-child({i})
          display inherit
          opacity 1
          transform translate3d(0, 0, 0)
          transition-delay '%sms' % (50 * i)

    &.active::before
      border-width 0

    &::before
      box-shadow: none

/*
 * Media Querys
 */

@media screen and (min-width: 576px) {
  .post {
    width: 50%;
  }
}

@media screen and (min-width: 767px) {
  .post {
    width: 100%;
  }
}

@media screen and (min-width: 881px) {
  .post {
    width: 50%;
  }
}

@media screen and (min-width: 1200px) {
  .post {
    width: 33.3%
  }
}

@media screen and (min-width: 1500px) {
  .post {
    width: 25%;
  }
}

@media screen and (min-width: 1800px) {
  .post {
    width: 20%;
  }
}

@media screen and (min-width: 1921px) {
  .post {
    width: 16.66%;
  }
}

@media screen and (min-width: 3000px) {
  .post {
    width: 10%;
  }
}