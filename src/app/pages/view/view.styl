@import '../../../assets/variables.styl'

.view-content
  .view-news
    padding-left 5em

    .view-news-title
      font-size 3em
      font-family $pt-serif
      text-transform capitalize

    .view-news-content
      .view-news-content-actions
        min-width 150px

  .view-actions
    min-width 200px



/* Transition */

.transition-in
  div
    transform translate3d(0, 0, 0)
    opacity 1
    transition transform .6s $timing .2s

  &:first-child
    transition-delay: .1s

.slide-right-leave-active
  .sidebar
    opacity 0
    transform translate3d(-50px, 0, 0)
    transition-delay .2s
  .content
    div
      opacity 0
      transform translate3d(50px, 0, 0)
      transition all .5s $timing .2s